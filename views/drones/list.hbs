<h2>Available drones</h2>
{{#each drones}}
<div class="row">
    {{name}}
    {{propellers}}
    {{maxSpeed}}
</div>
<div class="row">  
    <div>
        <a href="/drones/{{_id}}/edit" class="btn btn-secondary">Edit</a>
    </div>  
    <form action="/drones/{{_id}}/delete" method="POST">
        <button type="submit" class="btn btn-outline-danger">Delete</button>
    </form>
</div>
{{/each}}
